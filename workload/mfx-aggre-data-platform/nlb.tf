resource "aws_lb" "nifi" {
  name               = "nifi-alb"
  internal           = false
  load_balancer_type = "application"
  security_groups    = [aws_security_group.nifi_alb.id]
  subnets            = var.public_subnet_ids

  enable_deletion_protection = false

  tags = {
    Name = "nifi-alb"
  }
}

resource "aws_lb_target_group" "nifi" {
  name        = "nifi-tg"
  port        = 8443
  protocol    = "HTTPS"
  vpc_id      = var.vpc_id
  target_type = "ip"

  health_check {
    enabled             = true
    healthy_threshold   = 2
    interval            = 30
    matcher             = "200-399"
    path                = "/nifi/"
    port                = "traffic-port"
    protocol            = "HTTPS"
    timeout             = 5
    unhealthy_threshold = 3
  }

  tags = {
    Name = "nifi-tg"
  }
}

resource "aws_lb_listener" "nifi_https" {
  load_balancer_arn = aws_lb.nifi.arn
  port              = "443"
  protocol          = "HTTPS"
  ssl_policy        = "ELBSecurityPolicy-TLS13-1-2-2021-06"
  certificate_arn   = var.certificate_arn

  default_action {
    type             = "forward"
    target_group_arn = aws_lb_target_group.nifi.arn
  }
}

variable "certificate_arn" {
  description = "ACM certificate ARN for HTTPS"
  type        = string
}

output "alb_dns_name" {
  description = "ALB DNS name"
  value       = aws_lb.nifi.dns_name
}
